<?xml version="1.0" encoding="UTF-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="48dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView

        android:id="@+id/card_view_message"
        android:layout_width="match_parent"
        app:cardCornerRadius="6dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="#56FFC107"
        android:layout_height="wrap_content">

        <TextView
            android:layout_margin="12dp"
            android:textSize="18sp"
            android:fontFamily="sans-serif-light"
            android:id="@+id/text_view_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="This is going to be the message preview text. We will make it a big one, to be on multiple rows..." />
    </androidx.cardview.widget.CardView>

    <Button
        android:layout_marginTop="24dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/button_send_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_send_message" />


</LinearLayout>